
@{
    ViewBag.Title = "Pizza";
}
<body style="background-color:black; color:white;">
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="Pictures/vj.png" alt="" width="72" height="72">
            <h2><b>Cart</b></h2>
            <p class="lead"><b>Thank you for choosing Pizza Pickup!</b></p>
        </div>
        <div class="container mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col" class="text-center">Quantity</th>
                                    <th scope="col" class="text-right">Price</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var od in Model)
                                {
                                    <tr>
                                        <td><img src="@od.itemImg" style="width:50px;height:50px" /></td>
                                        <td>@od.itemName</td>
                                        <td scope="col"><input class="form-control" type="text" value="0" /></td>
                                        <td scope="col"> $@od.itemPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                                <br />
                        <div class="form-group" align="center">
                            <div class="col-md-offset-2 col-md-10">
                               
                                <input type="submit" value="Order Now" onclick="window.location.href=" @Url.Action("actionName", "controllerName");" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

